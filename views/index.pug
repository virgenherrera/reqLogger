extends layout

block content
  div.row
    div.col-md-1
      a.btn.btn-success.btn.lg.btn-block(href='/')
        span.glyphicon.glyphicon-home
    div.col-md-11
        h1= title
  
  div.row
    div.col-md-12.well#content
      each row,k in rows
        div.thumbnail
          div.caption
            div.row
              div.col-md-6
                h3 Request #
                  span(data-reqnum=parseInt(k)+1)= parseInt(k) + 1
              div.col-md-2.col-md-push-4
                div.btn-group(role="group" data-id=row.id)
                  button.btn.btn-success.button-view-request
                    span.glyphicon.glyphicon-eye-open
                  button.btn.btn-warning.button-delete-request
                    span.glyphicon.glyphicon-remove
            h4= 'received data at: '
              span= row.createdAt
            pre= JSON.stringify( row.body , null, 4 )
               
      
      
  div.row
    div.col-md-2
      p= "total rows: "
        span#count= count
